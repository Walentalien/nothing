#MainWidget:
#BoxLayoutExample:
AnchorLayoutExample:
<AnchorLayout>:
    #right, left, center for x (center is default)
    #bottom, top , center
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2,.2
        Button:
            text: "A"
        Button:
            text: "B"
<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "AAA"
        size_hint: .8, .5 # width and heigth

    BoxLayout:
        orientation:"horizontal"

        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"

        BoxLayout:
            spacing: "10dp"
            orientation:"vertical"

            Button:
                text: "B1"
            Button:
                text: "B2"



    Button:
        text: "C"
        size: "100dp", "100dp"
        size_hint: None, None  # enables manual scalling, setting size
    Button:
        text: "D"
        height: "60dp"
        size_hint: 1, None

    Button:
        text: "E"

        size_hint: .5, None
        height: "60dp"
        # x, center_x, right <- give persentage hat relates to this cordinates
        # y, center_y, top
        pos_hint: {"x": .5}

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0,0,1,1
    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "200dp"
        color: 0,0,1,1