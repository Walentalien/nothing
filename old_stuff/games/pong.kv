#:kivy 1.0.9

<PongGame>:
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    Button:
        text: "Default Button"
        #we don't use picsels, because of different picsel density
        #size: 400, 200
        #pos: 100, 200
        # we use density-independent pixels(dp)
        size: "200dp", "100dp"
        pos: "100dp", "100dp"
        color: 0,0,1,1
    Label:
        text: "Hello2"
        size: "100dp", "100dp"
        pos: "200dp", "300dp"
        color: 1,0,0,1 # r g b alfa




<PongBall>:
    size:50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size:self.size