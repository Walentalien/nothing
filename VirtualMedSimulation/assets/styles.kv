# Global styles for the VirtualDoctor app

<Label>:
    font_name: 'Roboto'
    color: 0.9, 0.9, 0.9, 1
    
<Button>:
    font_name: 'Roboto'
    font_size: '16sp'
    background_normal: ''
    background_color: 0.2, 0.6, 0.8, 1
    color: 1, 1, 1, 1
    size_hint_y: None
    height: '48dp'
    border_radius: [5]
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
    
<TextInput>:
    font_name: 'Roboto'
    font_size: '16sp'
    background_color: 0.2, 0.2, 0.2, 1
    foreground_color: 0.9, 0.9, 0.9, 1
    cursor_color: 0.9, 0.9, 0.9, 1
    multiline: False
    padding: [10, 10]
    
<BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ScrollView>:
    bar_width: '10dp'
    bar_color: 0.3, 0.7, 0.9, 1
    bar_inactive_color: 0.2, 0.5, 0.7, 0.5
    effect_cls: "ScrollEffect"
    scroll_type: ['bars', 'content']

<Popup>:
    background: ''
    background_color: 0.15, 0.15, 0.15, 0.95
    title_color: 0.9, 0.9, 0.9, 1
    title_size: '18sp'
    title_align: 'center'
    separator_color: 0.3, 0.7, 0.9, 1
    size_hint: 0.8, 0.8
